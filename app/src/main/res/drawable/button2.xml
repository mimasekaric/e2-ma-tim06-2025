        <layer-list>
            <item>
                <shape>
                    <corners android:radius="50dp" />
                    <gradient
                        android:startColor="#123d30"
                        android:endColor="#123d30"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="6dp" android:right="6dp" android:top="5dp" android:background="#123d30">
                <shape >
                    <corners
                        android:radius="50dp"
                        />

                    <size
                        android:width="270dp"
                        android:height="60dp"
                        />
                    <stroke
                        android:width="2.2dp"
                        android:color="#1f492f"
                        />
                </shape>
            </item>


        </layer-list>
    </item>

</selector>