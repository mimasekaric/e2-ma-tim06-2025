<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/logincard"
    android:layout_marginTop="10dp">


    <ImageView
        android:id="@+id/member_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_witch" />
    <TextView
        android:id="@+id/member_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/educursivesemibold"
        android:gravity="start|center_vertical"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/member_avatar"
        app:layout_constraintTop_toTopOf="@id/member_avatar"
        tools:text="username" />

    <ProgressBar
        android:id="@+id/member_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:progressDrawable="@drawable/custom_pp_bar"
        app:layout_constraintEnd_toEndOf="@id/member_username"
        app:layout_constraintStart_toStartOf="@id/member_username"
        app:layout_constraintTop_toBottomOf="@id/member_username"
        tools:progress="60" />

    <TextView
        android:id="@+id/member_total_damage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/educursivebold"
        android:textColor="#FFC107"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/member_progress_bar"
        app:layout_constraintTop_toBottomOf="@id/member_progress_bar"
        android:layout_marginTop="4dp"
        tools:text="128 DMG" />

</androidx.constraintlayout.widget.ConstraintLayout>