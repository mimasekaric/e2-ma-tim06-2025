<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baccpng"
    tools:context=".fragments.tasksFragments.OneTimeTaskFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/educursivebold"
        android:text="Create you one-time task"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/rt_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/logincard"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_otask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/FormLabel"
                android:text="Title" />
            <EditText
                android:id="@+id/otask_name"
                style="@style/FormEditText"
                android:hint="Enter task title..."
                android:inputType="textCapSentences" />

            <TextView
                style="@style/FormLabel"
                android:text="Description (optional)" />
            <EditText
                android:id="@+id/otask_description"
                style="@style/FormEditText"
                android:hint="Enter details..."
                android:inputType="textMultiLine"
                android:minLines="2" />

            <TextView
                style="@style/FormLabel"
                android:text="Category" />
            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                style="@style/FormLabel"
                android:text="Difficulty" />
            <RadioGroup
                android:id="@+id/rb_difficulty_options"
                style="@style/FormRadioGroup">
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_very_easy" android:text="Veoma lak - 1 XP" android:tag="1" />
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_easy" android:text="Lak - 3 XP" android:tag="3" />
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_hard" android:text="Te탑ak - 7 XP" android:tag="7" />
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_very_hard" android:text="Ekstremno te탑ak - 20 XP" android:tag="20" />
            </RadioGroup>

            <TextView
                style="@style/FormLabel"
                android:text="Importance" />
            <RadioGroup
                android:id="@+id/rg_importance_options"
                style="@style/FormRadioGroup">
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_normal" android:text="Normalan - 1 XP" android:tag="1" />
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_important" android:text="Va탑an - 3 XP" android:tag="3" />
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_very_important" android:text="Veoma va탑an - 10 XP" android:tag="10" />
                <RadioButton style="@style/FormRadioButton" android:id="@+id/rb_special" android:text="Specijalan - 100 XP" android:tag="100" />
            </RadioGroup>

            <TextView
                style="@style/FormLabel"
                android:text="Execution time:" />
            <TimePicker
                android:id="@+id/otaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:timePickerMode="spinner" />
            <TextView
                android:id="@+id/timeErrorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone"
                tools:text="This time for this day has already passed."
                tools:visibility="visible" />

            <TextView
                style="@style/FormLabel"
                android:text="Execution date:" />
            <DatePicker
                android:id="@+id/ot_date_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:calendarViewShown="false"
                android:datePickerMode="calendar"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_otask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button"
        app:backgroundTint="@null"
        android:fontFamily="@font/educursivesemibold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="CREATE"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>