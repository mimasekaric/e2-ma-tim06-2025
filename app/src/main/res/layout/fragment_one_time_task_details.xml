<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baccpng"
    tools:context=".fragments.tasksFragments.RecurringTaskDetailsFragment">

    <LinearLayout
        android:id="@+id/top_actions_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/edit_task_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="26dp"
            app:iconTint="@null"
            app:icon="@drawable/edit_icon" />

        <Button
            android:id="@+id/delete_task_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/delete_icon"
            app:iconGravity="textStart"
            android:padding="26dp"
            android:layout_marginRight="20dp"
            app:iconTint="@null" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_actions_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/logincard"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:textColor="#fca103"
                android:id="@+id/task_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/educursivebold"
                android:gravity="center"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="Task Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/category_color_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_square_shape" />

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/educursiveregular"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:text="Category Name" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/logincard"
                android:fontFamily="@font/educursiveregular"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                tools:text="This is a detailed description of the recurring task." />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:columnCount="2">

                <TextView
                    style="@style/DetailHeader"
                    android:fontFamily="@font/educursivebold"
                    android:text="Difficulty:"
                    android:textColor="#fca103" />

                <TextView
                    android:id="@+id/difficulty_text_view"
                    style="@style/DetailValue"
                    android:fontFamily="@font/educursiveregular"
                    android:textColor="@color/white"
                    tools:text="Hard (7 XP)" />

                <TextView
                    style="@style/DetailHeader"
                    android:fontFamily="@font/educursivebold"
                    android:text="Importance:"
                    android:textColor="#fca103" />

                <TextView
                    android:id="@+id/importance_text_view"
                    style="@style/DetailValue"
                    android:fontFamily="@font/educursiveregular"
                    android:textColor="@color/white"
                    tools:text="Important (3 XP)" />

                <TextView
                    style="@style/DetailHeader"
                    android:fontFamily="@font/educursivebold"
                    android:text="Execution Time:"
                    android:textColor="#fca103" />

                <TextView
                    android:id="@+id/time_text_view"
                    style="@style/DetailValue"
                    android:fontFamily="@font/educursiveregular"
                    android:textColor="@color/white"
                    tools:text="09:30 AM" />

                <TextView
                    style="@style/DetailHeader"
                    android:fontFamily="@font/educursivebold"
                    android:text="Start Date:"
                    android:textColor="#fca103" />

                <TextView
                    android:id="@+id/start_date_text_view"
                    style="@style/DetailValue"
                    android:fontFamily="@font/educursiveregular"
                    android:textColor="@color/white"
                    tools:text="2025-01-01" />


                <TextView
                    style="@style/DetailHeader"
                    android:fontFamily="@font/educursivebold"
                    android:text="Status:"
                    android:textColor="#fca103" />

                <TextView
                    android:id="@+id/o_status"
                    style="@style/DetailValue"
                    android:fontFamily="@font/educursivemedium"
                    android:textColor="@color/white"
                    tools:text="status" />

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_otask_done"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Done" />

                <Button
                    android:id="@+id/btn_otask_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF4444"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_otask_pause"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF4"
                    android:text="Pause" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>