<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BossActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/battleUiContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bossbcg">

        <ProgressBar
            android:id="@+id/hpProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:max="1000"
            android:progressDrawable="@drawable/custom_hp_bar"
            tools:progress="850"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/hpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="850 / 1000"
            app:layout_constraintBottom_toBottomOf="@id/hpProgressBar"
            app:layout_constraintEnd_toEndOf="@id/hpProgressBar"
            app:layout_constraintStart_toStartOf="@id/hpProgressBar"
            app:layout_constraintTop_toTopOf="@id/hpProgressBar" />



        <ProgressBar
            android:id="@+id/ppProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:max="1000"
            android:progressDrawable="@drawable/custom_pp_bar"
            tools:progress="500"
            app:layout_constraintTop_toBottomOf="@+id/hpProgressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/ppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="PP: 500 / 1000"
            app:layout_constraintTop_toTopOf="@id/ppProgressBar"
            app:layout_constraintBottom_toBottomOf="@id/ppProgressBar"
            app:layout_constraintStart_toStartOf="@id/ppProgressBar"
            app:layout_constraintEnd_toEndOf="@id/ppProgressBar" />



        <ImageView
            android:id="@+id/myAnimatedImage"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/boss_idle_animation"
            app:layout_constraintTop_toBottomOf="@id/ppProgressBar"
            app:layout_constraintBottom_toTopOf="@+id/attackAttemptsImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <ImageView
            android:id="@+id/attackAttemptsImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/lifes_frame_1"
            app:layout_constraintBottom_toTopOf="@id/attackButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <Button
            android:id="@+id/attackButton"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button"
            android:text="@string/attack_button"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

