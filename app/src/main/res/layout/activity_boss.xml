<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BossActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/battleUiContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bossbcg">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/bossBattleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="hpProgressBar,hpTextView,attackAttemptsImage,myAnimatedImage,attackButton,userInfo,avatarImageView,ppProgressBar,ppTextView,activatedEqScroll,rewardsP,potential_coins_layout,hit_chance_layout"
            android:visibility="gone"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/hpProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:max="1000"
            android:progressDrawable="@drawable/custom_hp_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="850" />

        <TextView
            android:id="@+id/hpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/hpProgressBar"
            app:layout_constraintEnd_toEndOf="@id/hpProgressBar"
            app:layout_constraintStart_toStartOf="@id/hpProgressBar"
            app:layout_constraintTop_toTopOf="@id/hpProgressBar"
            tools:text="850 / 1000" />
        <LinearLayout
            android:id="@+id/hit_chance_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="2dp"

        app:layout_constraintTop_toTopOf="@+id/rewardsP"
        app:layout_constraintEnd_toStartOf="@+id/rewardsP"
        app:layout_constraintStart_toEndOf="@+id/attackAttemptsImage"
        app:layout_constraintBottom_toBottomOf="@+id/rewardsP">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hit Chance"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/educursivebold" />

        <TextView
            android:id="@+id/hit_chance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/educursivebold"
            tools:text="100%" />

    </LinearLayout>


        <ImageView
            android:id="@+id/attackAttemptsImage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/life_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hpProgressBar" />

        <TextView
            android:id="@+id/textShowRemaining"
            android:layout_width="232dp"
            android:layout_height="106dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/educursivesemibold"
            android:text="You have 10 additional attacks"
            android:textColor="#DA9100"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hpProgressBar" />

        <ImageView
            android:id="@+id/myAnimatedImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/boss_idle_animation"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/attackButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attackAttemptsImage" />


        <Button
            android:id="@+id/attackButton"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="180dp"
            android:background="@drawable/button"
            android:text="@string/attack_button"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <View
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="@+id/avatarImageView"
            app:layout_constraintTop_toBottomOf="@+id/attackButton"
            app:layout_constraintBottom_toBottomOf="@+id/activatedEqScroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/logincard">
        </View>
        <androidx.cardview.widget.CardView
            android:id="@+id/avatarImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/attackButton">

            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_badgetry" />
        </androidx.cardview.widget.CardView>


        <ProgressBar
            android:id="@+id/ppProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:elevation="4dp"
            android:max="1000"
            android:progressDrawable="@drawable/custom_pp_bar"
            app:layout_constraintTop_toTopOf="@+id/avatarImageView"
            app:layout_constraintBottom_toBottomOf="@+id/avatarImageView"
            app:layout_constraintEnd_toStartOf="@+id/avatarImageView"
            app:layout_constraintStart_toStartOf="parent"
            tools:progress="500" />

        <TextView
            android:id="@+id/ppTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ppProgressBar"
            app:layout_constraintEnd_toEndOf="@id/ppProgressBar"
            app:layout_constraintStart_toStartOf="@id/ppProgressBar"
            app:layout_constraintTop_toTopOf="@id/ppProgressBar"
            tools:text="PP: 500" />

        <HorizontalScrollView
            android:id="@+id/activatedEqScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/ppProgressBar"
        app:layout_constraintStart_toStartOf="@+id/ppProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/ppProgressBar">

        <LinearLayout
            android:id="@+id/rewardsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

<!--            <ImageView-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:src="@mipmap/ic_launcher_boot"-->
<!--                tools:ignore="ContentDescription" />-->
<!--            <ImageView-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:src="@mipmap/ic_launcher_boot"-->
<!--                tools:ignore="ContentDescription" />-->

        </LinearLayout>

    </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/noBoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/sleepingBoss"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/boss_sleeping"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="RELAX FOR NOW, TRAVELLER..."
                android:textColor="#DA9100"
                android:textSize="22sp"
                android:fontFamily="@font/educursivebold"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/rewardsP"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@mipmap/ic_launcher_potencial_rewards"
            app:layoutDescription="@xml/circular_motion_rewards"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hpProgressBar"/>

        <LinearLayout
            android:id="@+id/potential_coins_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/rewardsP"
        app:layout_constraintStart_toStartOf="@+id/rewardsP"
        app:layout_constraintEnd_toEndOf="@+id/rewardsP">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@mipmap/ic_launcher_coins" />

        <TextView
            android:id="@+id/potential_coins_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/educursivebold"
            tools:text="200" />

    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/chestOverlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">


        <FrameLayout
            android:id="@+id/chestContainer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center">


            <ImageView
                android:id="@+id/staticChestImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/idle_chest"
                android:visibility="visible" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/openingChestAnimation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:lottie_rawRes="@raw/chest_animation"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />
        </FrameLayout>


        <TextView
            android:id="@+id/shakeToOpenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="180dp"
            android:text="@string/shake_for_rewards"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>


</RelativeLayout>