<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baccpng"
    tools:context=".fragments.HomeDashboardFragment">

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/educursivebold"
        android:gravity="center"
        android:text="WELCOME TRAVELLER,\nSTART YOUR ADVENTURE"
        android:textColor="#FFC107"
        android:textSize="28sp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/background_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/logincard"
        app:layout_constraintTop_toBottomOf="@+id/welcome_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="@+id/background_card"
        app:layout_constraintBottom_toBottomOf="@+id/background_card"
        app:layout_constraintEnd_toEndOf="@+id/background_card"
        app:layout_constraintStart_toStartOf="@+id/background_card">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher_witch" />
    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/button_tasks"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/background_card"
        app:layout_constraintCircle="@id/avatar_card"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintEnd_toEndOf="@+id/background_card"
        app:layout_constraintStart_toStartOf="@+id/background_card"
        app:layout_constraintTop_toTopOf="@+id/background_card"
        tools:ignore="ContentDescription" />


    <ImageButton
        android:id="@+id/button_boss"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/boss_idle_animation"
        app:layout_constraintBottom_toBottomOf="@+id/background_card"
        app:layout_constraintCircle="@id/avatar_card"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintEnd_toEndOf="@+id/background_card"
        app:layout_constraintStart_toStartOf="@+id/background_card"
        app:layout_constraintTop_toTopOf="@+id/background_card"
        tools:ignore="ContentDescription" />


    <ImageButton
        android:id="@+id/button_categories"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_category"
        app:layout_constraintBottom_toBottomOf="@+id/background_card"
        app:layout_constraintCircle="@id/avatar_card"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintEnd_toEndOf="@+id/background_card"
        app:layout_constraintStart_toStartOf="@+id/background_card"
        app:layout_constraintTop_toTopOf="@+id/background_card"
        tools:ignore="ContentDescription" />


    <ImageButton
        android:id="@+id/button_shop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="4dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_coins"
        app:layout_constraintBottom_toBottomOf="@+id/background_card"
        app:layout_constraintCircle="@id/avatar_card"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintEnd_toEndOf="@+id/background_card"
        app:layout_constraintStart_toStartOf="@+id/background_card"
        app:layout_constraintTop_toTopOf="@+id/background_card"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>