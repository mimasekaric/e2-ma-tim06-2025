<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fantasybackground"
    tools:context=".TestActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="35dp"

        android:layout_marginBottom="70dp"
        android:fontFamily="@font/educursivebold"
        android:textAlignment="center"
        android:textColor="#42f5ad"
        android:textFontWeight="700"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonV"
        android:alpha="0.8"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="468dp"
        android:backgroundTint="#9dd4c3"
        android:fontFamily="@font/educursivesemibold"
        android:rotation="0"
        android:rotationX="0"
        android:text="@string/button_ent"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
